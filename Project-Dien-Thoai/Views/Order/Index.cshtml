
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}
<body>
    @using (Html.BeginForm("Index", "Order", new { @makh = ViewBag.maKH }, FormMethod.Post))
    {<div class="">
            <div class="col-md-12" style="margin: 30px 0;">
                <h3 align="center">Thông Tin Khách Hàng</h3>
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <form method="post" action="">
                            <div class="form-group">
                                <label for="" style="font-weight: bold;">
                                    Tên Khách Hàng:
                                    <span>@ViewBag.tenKH</span>
                                </label>
                            </div>
                            <div class="form-group">
                                <label for="" style="font-weight: bold;">Ngày Sinh:</label>
                                <input type="date" required class="form-control" name="ngaysinh">
                            </div>
                            <div class="form-group">
                                <label for="" style="font-weight: bold;">Giới Tính:</label>
                                <input type="radio" name="rdbsex" value="Nam" checked="checked" /> NAM
                                <input type="radio" name="rdbsex" value="Nữ" /> NỮ
                                <input type="radio" name="rdbsex" value="Không Có" /> KHÔNG CÓ
                            </div>
                            <div class="form-group">
                                <label for="" style="font-weight: bold;">Địa Chỉ:</label>
                                <input class="form-control" type="text" required name="address">
                            </div>
                            <div class="form-group">
                                <label for="" style="font-weight: bold;">Số Điện Thoại:</label>
                                <input class="form-control" type="number" required name="SDT">
                            </div>
                            <button type="submit" class="btn btn-success">Đặt Hàng</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>}
</body>


